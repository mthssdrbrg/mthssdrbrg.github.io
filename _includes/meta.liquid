<div class="meta">
  <span class="date">{{ include.date | date_to_string }}</span>
  {% unless include.tags.size == 0 %}
  <span> / </span>
  <span class="tags">
    {% for tag in include.tags %}
    <span class="tag">{{ tag }}</span>{% if forloop.last != true %} {% endif %}
    {% endfor %}
  </span>
  {% endunless %}
</div>
